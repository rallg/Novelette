%% Novelette does not use the standard TeX commands such as \part, \section,
%% \subsection, and so forth. Those are inappropriate for fiction, and would
%% mightily disturb the line grid. All these do is echo the argument, if any:
\long\gdef\part#1{#1}
\long\gdef\chapter#1{#1}
\long\gdef\subsection#1{#1}
\long\gdef\subsubsection#1{#1}
\long\gdef\paragraph#1{#1}
\long\gdef\subparagraph#1{#1}
\long\gdef\appendix#1{#1}
%%

%% Instead, Novelette provides a generic method for starting new chapters,
%% and chapter-like sections such as a long Introduction, using \opening
%% and \content commands. It also provides a choice of methods for
%% scene breaks within a chapter, or you can do it your own way.

%% Command \opening{name}{subname} creates a 12-line area at the section start,
%% containing only the name (chapter title) and subname (chapter subtitle).
\newif\if@inopening % Maybe need to know this, later.
\newcommand\opening[2]{%
  \newpage%
  \thispagestyle{empty}%
  \global\@inopeningtrue%
  \suppressfloats[t]% ensures that a floated image does not go on top
  \gsetlength\parindent{0pt}% within environment
  \ResetFootnoteSymbol% resets symbolic markers, but not numerical markers
  \null\null\null\null\null % Name is written on line 6, may smash up.
  \ignorespaces{\centering{\stake\smash{\huge #1}}\par}%
  \null%
  {\centering{\stake\smash{\large #2}}\par}%
  \null\null\null\null
}
%% Command \content indicates that the \opening has finished.
%% It begins the text without indent.
%% Optional argument bumps up (positive) or down (negative) integer lines.
\newcommand\content[1][0]{
  \IfInteger{#1}{
    \vspace{-#1\nbs}
  }{
    \ClassWarning{Novelette}{Bad optional value for \string\content. ^^J%
     Must be integer. Argument ignored.}%
  }
  \global\@inopeningfalse
  \gsetlength\parindent{\normalparindent}
}
%%
\NoIndentAfterCmd{\content}
%%

%% Repair \FirstLine{} command from `magaz' package.
%% Problem: Conflict with \NoIndentAfterCmd{\content}.
%% Without fix, \noindent is carried past \FirstLine to the next paragraph.
\let\my@FirstLine\FirstLine
\def\FirstLine#1{%
  \vspace{-\nbs}% Bump up, to allow space for the following line.
  \strut\par% This absorbs the \NoIndentAfter{\content}.
  \gsetlength\parindent{0pt}% \noindent would not work, so do this.
  \my@FirstLine{#1}%
  \gsetlength\parindent{\normalparindent}% Back to normal.
}
